            <a href="{{ path('cherez_web_project_client_list') }}" class="list-group-item{% if app.request.get('_route') == 'cherez_web_project_client_list' %} active{% endif %}">Видео-клиенты</a>
        {% endblock sidebar_items %}
    </div>
{% endblock content_sidebar %}